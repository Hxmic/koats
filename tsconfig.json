{
    "compilerOptions": {
        "experimentalDecorators": true,    // Enables experimental support for ES7 decorators.
        "module": "commonjs",
        "target": "es2017",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",  // TS文件编译后会放入到此文件夹内
        // "noImplicitAny": false, // false-对不知道的类型默认为any处理
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*", "typings"
    ]
}